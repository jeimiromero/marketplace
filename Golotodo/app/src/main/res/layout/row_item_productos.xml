<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="horizontal"
    android:id="@+id/ll_item">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="50">

        <ImageView
            android:id="@+id/imv_producto"
            android:layout_width="129dp"
            android:layout_height="110dp"
            android:src="@drawable/golotodo_1">

        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tev_nombre_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BalÃ³n de baloncesto"
            android:textSize="15dp">

        </TextView>

        <TextView
            android:id="@+id/tev_categoria_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Baloncesto"
            android:textSize="15dp">

        </TextView>

        <TextView
            android:id="@+id/tev_precio_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$30000"
            android:textSize="15dp">

        </TextView>

        <Button
            android:id="@+id/btn_favorito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favoritos">

        </Button>

        <Button
            android:id="@+id/btn_carrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carrito">

        </Button>
    </LinearLayout>



</LinearLayout>

